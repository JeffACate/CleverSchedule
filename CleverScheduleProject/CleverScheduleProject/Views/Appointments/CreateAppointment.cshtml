@model CleverScheduleProject.Models.Appointment

@{
    ViewData["Title"] = "Create";
}

<div class="col-sm-6">
    <h4 class="text-center">New Appointment</h4>
    <hr class="bg-white" />
</div>
<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <form asp-action="CreateAppointment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control-lg d" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            @*Comment code: 140804  *@
            <div class="form-group" hidden>
                <label asp-for="ContractorId" class="control-label" ></label>
                <input asp-for="ContractorId" class="form-control" value="3" />
            </div>
            <div class="form-group d-flex justify-content-center">
                <input type="submit" value="Submit" class="btn btn-secondary col-sm-4" />
                <a class="btn btn-outline-warning col-sm-4 ml-4" asp-controller="Clients" asp-action="Profile">Back</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
